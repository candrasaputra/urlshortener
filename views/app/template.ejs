<!DOCTYPE html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>URL Shortener</title>
	<link rel="stylesheet" href="/kapella/js/mdi/css/materialdesignicons.min.css">
	<link rel="stylesheet" href="/kapella/js/base/vendor.bundle.base.css">
	<link rel="stylesheet" href="/kapella/css/style.css">
	<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
	<script src="https://code.highcharts.com/highcharts.js"></script>
	<script src="https://code.highcharts.com/modules/data.js"></script>
	<script src="https://code.highcharts.com/modules/drilldown.js"></script>
</head>


<body>
	<div class="container-scroller">
		<div class="horizontal-menu">
			<nav class="navbar top-navbar col-lg-12 col-12 p-0">
				<div class="container-fluid">
					<div class="navbar-menu-wrapper d-flex align-items-center justify-content-between">
						<div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
							<a class="navbar-brand brand-logo" href="/app">
								<img src="/images/logo/logo.png" alt="logo" style="width: 100px; height: 50px;" />
							</a>
							<a class="navbar-brand brand-logo-mini" href="/app">
								<img src="/images/logo/logo.png" alt="logo" style="width: 100px; height: 50px" />
							</a>
						</div>
						<ul class=" navbar-nav navbar-nav-right">
							<li class="nav-item dropdown  d-lg-flex d-none">
								<a href="/app">
									<button type="button" class="btn btn-inverse-primary btn-sm">Dashboard </button>
								</a>
							</li>
							<li class="nav-item dropdown d-lg-flex d-none">
								<a href="/app/create"><button class="btn btn-inverse-primary btn-sm"><span
											class="mdi mdi-library-plus">Purl
											Link</span></button></a>
							</li>
							<li class="nav-item dropdown d-lg-flex d-none">
								<a href="/app/tags/"><button class="btn btn-inverse-primary btn-sm"><span
											class="mdi mdi-alpha-t">Tags</span></button></a>
							</li>
							<li class="nav-item nav-profile dropdown">
								<a class="nav-link dropdown-toggle" href="/kapella/#" data-toggle="dropdown"
									id="profileDropdown">
									<span class="nav-profile-name"><%= session.username %></span>
									<span class="online-status"></span>
									<img src="https://www.gravatar.com/avatar/<%=generateMD5(session.email)%>"
										alt="profile" />
								</a>
								<div class="dropdown-menu dropdown-menu-right navbar-dropdown"
									aria-labelledby="profileDropdown">
									<a class="dropdown-item">
										<i class="mdi mdi-settings text-primary"></i>
										Profile
									</a>
									<a href="/user/logout" class="dropdown-item">
										<i class="mdi mdi-logout text-primary"></i>
										Logout
									</a>
								</div>
							</li>
						</ul>
						<button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button"
							data-toggle="horizontal-menu-toggle">
							<span class="mdi mdi-menu"></span>
						</button>
					</div>
				</div>
			</nav>
		</div>

		<%- include('./partials/'+page)%>

	</div>
	<script src="/kapella/js/base/vendor.bundle.base.js"></script>
	<script src="/kapella/js/template.js"></script>
	<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
	<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
	<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>

	<script>
		$(document).ready(function () {
			$('#ds').DataTable({
				"responsive": true,
				"paging": false,
				"scrollY": "500px",
				"searching": false,
				"lengthChange": false,
				"aaSorting": []
			});

			$('#dsHistory').DataTable({
				"aaSorting": []
			});
		});
	</script>
</body>

</html>